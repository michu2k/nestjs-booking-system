generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["omitApi"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id               Int    @id @default(autoincrement())
  userId           Int
  provider         String @unique
  proiverAccountId String @unique
  user             User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id       Int       @id @default(autoincrement())
  name     String
  email    String    @unique
  phone    String?
  password String?
  role     UserRole
  accounts Account[]
  Booking  Booking[]
}

model Booking {
  id        Int           @id @default(autoincrement())
  from      DateTime
  to        DateTime
  createdAt DateTime      @default(now())
  userId    Int
  serviceId Int
  status    BookingStatus
  service   Service       @relation(fields: [serviceId], references: [id], onDelete: Cascade)
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Service {
  id          Int       @id @default(autoincrement())
  name        String
  description String
  price       Int
  locationId  Int?
  createdAt   DateTime  @default(now())
  Booking     Booking[]
  location    Location? @relation(fields: [locationId], references: [id])
}

model Location {
  id      Int       @id @default(autoincrement())
  city    String
  address String
  country String
  lat     Float
  lng     Float
  Service Service[]
}

enum UserRole {
  ADMIN
  MANAGER
  USER
}

enum BookingStatus {
  CONFIRMED
  PENDING
  CANCELLED
}
